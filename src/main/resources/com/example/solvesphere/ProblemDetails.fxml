<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.solvesphere.ProblemDetailsController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" spacing="10"
              AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <padding>
                <Insets top="20" right="130" bottom="20" left="130"/>
            </padding>
            <Label text="Problem Details" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Separator/>
            <VBox spacing="5" alignment="TOP_CENTER">
                <Label text="Title" style="-fx-font-weight: bold"/>
                <Label fx:id="problemTitle" text="[Problem Title Here]" style="-fx-font-size: 16px;"/>
                <TextArea fx:id="problemDescription" editable="false" wrapText="true" prefHeight="100.0"/>
            </VBox>
            <Label text="Comments" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <ScrollPane fitToWidth="true">
                <ListView fx:id="commentList" prefHeight="200.0"/>
            </ScrollPane>

            <!-- שדות להוספת פתרון חדש -->
            <Label text="Add a Solution" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <VBox spacing="5" alignment="CENTER">
                <TextField fx:id="solutionTitleField" promptText="Enter solution title..." />
                <TextArea fx:id="solutionDescriptionField" promptText="Enter solution description..."
                          wrapText="true" prefHeight="100.0"/>
            </VBox>

            <!-- כפתור להוספת פתרון -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Post Solution" onAction="#postComment"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
