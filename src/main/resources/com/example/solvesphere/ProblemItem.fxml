<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.solvesphere.ProblemItemController" spacing="10" maxWidth="450" style="-fx-border-color: #475a88; -fx-padding: 10;">
    <Label fx:id="problemTitle" styleClass="problem-title" style="-fx-font-size: 17;"/>
    <Text fx:id="postedBy" style="-fx-font-size: 14; -fx-fill: gray;">Posted by: </Text>
    <Text fx:id="postDate" style="-fx-font-size: 14; -fx-fill: gray;">Date: </Text>
    <HBox>
        <!-- <Button text="Suggest A Solution" onAction="#onSolveClick"/> -->
        <Button text="View Problem Details" onAction="#onDetailsClick" style="-fx-font-size: 12"/>
    </HBox>
</VBox>
